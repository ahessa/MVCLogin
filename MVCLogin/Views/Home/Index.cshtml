
@{
    Layout = null;

    //this prevents the user from going to the home page without logging in

    if (Session["userID"] == null)
    {
        Response.Redirect("~/Login/Index");
    }
}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Dashboard</title>


    <style>

        .display-1{
            text-align:center;
        }

        .display-4{
            text-align:center;
        }

        body{
            background-image: url('/Images/pexels-photo-14675.jpeg');
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: cover;
        }

        .btn-secondary{
            text-align:center;
        }

        .btn-danger{
            text-align:center;
        }

        .jumbotron{
            
        }


    </style>

</head>


<body>

    <div>



        <h1 class="display-1">Welcome @Session["userName"].ToString()!</h1>
        <br />
        <h1 class="display-4">Thank You for Logging In.</h1>



        @*anchor link to redirect the user to logout action in the login controller*@
        @*<a href="@Url.Action("LogOut", "Login")">Logout</a>*@
        @*<a href="@Url.Action("Index", "Users")">User List</a>*@



        <br /><br />



        <table style="margin: 0 auto;">
            <td></td>
            <td>
                <a href="@Url.Action("LogOut", "Login")" class="btn btn-danger" role="button">Logout</a>


                <a style="margin-left: 15px;" href="@Url.Action("Index", "Users")" class="btn btn-secondary" role="button">Users List</a>
            </td>
        </table>

    </div>


</body>
</html>
