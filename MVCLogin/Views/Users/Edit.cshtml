@model MVCLogin.ViewModels.EditUserViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>



<style>


    .container {
        margin-top: 50px;
    }


    table{
        margin-left: 100px;
    }

    body{
            background-image: url('/Images/pexels-photo-14675.jpeg');
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: cover;
        }

    /*.mr-sm-2{
        background:none;
    }*/

</style>


<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

    @using (Html.BeginForm())
    {
        <div class="container">



            @Html.AntiForgeryToken()



            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.UserID)


            <table>
                <tr>
                    <td>
                        @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "mb-2 mr-sm-2" })
                    </td>
                    <td>
                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control mb-2 mr-sm-2" } })
                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                    </td>
                </tr>

                <tr>
                    <td>
                        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "mb-2 mr-sm-2" })
                    </td>
                    <td>
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control mb-2 mr-sm-2" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </td>
                </tr>

                <tr>
                    <td>
                        @Html.LabelFor(model => model.confirmPassword, htmlAttributes: new { @class = "mb-2 mr-sm-2" })
                    </td>
                    <td>
                        @Html.EditorFor(model => model.confirmPassword, new { htmlAttributes = new { @class = "form-control mb-2 mr-sm-2" } })
                        @Html.ValidationMessageFor(model => model.confirmPassword, "", new { @class = "text-danger" })
                    </td>
                </tr>

                <tr>
                    <td>
                        @Html.LabelFor(model => model.Age, htmlAttributes: new { @class = "mb-2 mr-sm-2" })
                    </td>
                    <td>
                        @Html.EditorFor(model => model.Age, new { htmlAttributes = new { @class = "form-control mb-2 mr-sm-2" } })
                        @Html.ValidationMessageFor(model => model.Age, "", new { @class = "text-danger" })
                    </td>
                </tr>


                <tr>
                    <td><label class="mb-2 mr-sm-2">Country</label></td>
                    <td>
                        @Html.ValidationMessageFor(model => model.Country, "", new { @class = "error" })
                        @Html.DropDownListFor(model => model.Country, new List<SelectListItem>
                           {
                                new SelectListItem{Text="Egypt", Value="Egypt"},
                                new SelectListItem{Text="Malaysia", Value="Malaysia"},
                                new SelectListItem{Text="China", Value="China"},
                                new SelectListItem{Text="India", Value="India"},
                           },

                                new { @class = "form-control mb-2 mr-sm-2" })
                    </td>
                </tr>


                <tr>
                    <td>
                        @Html.LabelFor(model => model.Hobby, htmlAttributes: new { @class = "mb-2 mr-sm-2" })
                    </td>
                    <td>
                        @Html.EditorFor(model => model.Hobby, new { htmlAttributes = new { @class = "form-control mb-2 mr-sm-2" } })
                        @Html.ValidationMessageFor(model => model.Hobby, "", new { @class = "text-danger" })
                    </td>
                </tr>

                <tr>
                    <td>
                        @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "mb-2 mr-sm-2" })
                    </td>
                    <td>
                        @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control mb-2 mr-sm-2", @type = "date" } })
                        @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
                    </td>
                </tr>

                <tr>
                    <td>
                        <input type="submit" value="Save" class="btn btn-info"/>
                    </td>
                </tr>

                <td></td>

                <tr>
                    <td>
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-success" })
                    </td>
                </tr>

            </table>
        
        </div>
    }

    <br />

    <div>
        
    </div>

</body>
</html>
